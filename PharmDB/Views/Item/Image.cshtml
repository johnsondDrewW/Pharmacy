@model PharmDB.Models.Item
@{
    ViewBag.Title = "Image";
}


<div class="form-group">
   @Html.LabelFor(model => model.Image1, new { @class = "control-label col-sm-2" })
    <div class="col-sm-10">
        @if (Model.Image1 != null) {
            <img src="data:image;base64,@System.Convert.ToBase64String( Model.Image1)" style="height: 1000px; width: 1000px" />
        }
        else {
            <h2>No Image To Display</h2>
        }
     </div>
</div>
